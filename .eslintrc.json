{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "google",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "prettier",
    "react",
    "react-hooks"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "rules": {
    "indent": "off",
    "linebreak-style": "off",
    "no-mixed-spaces-and-tabs": "warn",
    "max-len": [
      2,
      {
        "code": 150
      }
    ],
    "eol-last": "error",
    "vars-on-top": "warn",
    "prefer-const": "error",
    "object-curly-spacing": [
      2,
      "always"
    ],
    "arrow-parens": "off",
    "no-unused-expressions": "error",
    "react/jsx-key": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/no-unescaped-entities": "off",
    "require-jsdoc": "off",
    "new-cap": "off",
    "comma-dangle": "off",
    "quote-props": "off"
  }
}